*
  box-sizing border-box
ul
  margin 0
  padding 0
  list-style none
a
  text-decoration none

.logo
  margin 0
  font-size 1.45em

.main-nav a, .logo a
  padding 10px 15px
  text-transform uppercase
  text-align center
  display flex

.main-nav a:hover
  color #718daa

header
  padding-top .5em
  padding-bottom .5em
  background-color #f4f4f4

@media (min-width: 825px)
  .header, .main-nav
    display flex
  .header
    flex-direction column
    align-items center
     .header
       width 80%
       margin 0 auto
       max-width 1150px

@media (min-width: 1025px)
  .header
    flex-direction row
    justify-content space-between
